    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app/__init__.py",
                "FLASK_DEBUG": "1",
                "SECRET_KEY": "supersecretkey",
                "DATABASE_URL": "postgresql://postgres_user:postgres_pass@postgres-service:5433/main_db",
                "JWT_SECRET_KEY": "jwtsecret"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}